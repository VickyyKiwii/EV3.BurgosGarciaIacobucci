@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MostrarModificar Categorías</h2>
<div class="row">
    <div class="col-lg-6">
        <form method="post" action="@Url.Action("GuardarModificar", "Categorias")">


            <div class="form-group">
                <label for="idProducto">ID Categoria</label>
                <input type="number" name="id" class="form-control" value="@Model.id" readonly />
            </div>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" class="form-control" value="@Model.nombre" />
            </div>

            <input type="submit" value="Guardar" class="btn btn-primary" />
        </form>

    </div>
</div>

